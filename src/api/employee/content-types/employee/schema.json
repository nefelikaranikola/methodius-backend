{
  "kind": "collectionType",
  "collectionName": "employees",
  "info": {
    "singularName": "employee",
    "pluralName": "employees",
    "displayName": "Employees",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "phoneNumber": {
      "type": "string",
      "required": false
    },
    "position": {
      "type": "string"
    },
    "department": {
      "type": "string"
    },
    "dateOfJoining": {
      "type": "date",
      "required": true
    },
    "dateOfBirth": {
      "type": "date",
      "required": true
    },
    "address": {
      "type": "string"
    },
    "employmentStatus": {
      "type": "enumeration",
      "enum": [
        "Full-Time",
        "Part-Time",
        "Intern",
        "Contractor"
      ],
      "required": true,
      "default": "Full-Time"
    },
    "picture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "bio": {
      "type": "text"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "employee"
    },
    "leaveRequests": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::leave-request.leave-request",
      "mappedBy": "employee"
    },
    "contract": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::contract.contract",
      "mappedBy": "employee"
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "employee"
    }
  }
}
